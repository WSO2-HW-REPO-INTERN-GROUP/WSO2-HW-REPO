             function prepareList() {
                 $('#expList').find('li:has(ul)')
                         .click( function(event) {
                             if (this == event.target) {
                                 $(this).toggleClass('collapsed');
                                 $(this).children('ul').toggle('hidden');
                             }
                             return false;
                         })
                         .attr('class','expanded')
                         .children('ul').show('medium');
             }
             
                    
